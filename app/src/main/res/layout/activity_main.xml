<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_home_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableStart="@drawable/ring_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="알림 센터"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_place_name" />

    <Button
        android:id="@+id/bt_home_cctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableStart="@drawable/cctv_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="CCTV 확인"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_alarm"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/bt_home_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableStart="@drawable/gallery_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="지난 사진/영상"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_cctv"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/bt_home_facility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableStart="@drawable/facility_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="시설물 현황"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_gallery"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/godom"
        android:gravity="center"
        android:text="Ding Dong Dang"
        android:textColor="#ACACAC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_facility" />

    <Button
        android:id="@+id/bt_place_name"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@color/orange"
        android:drawableStart="@drawable/gps_resize"
        android:drawableEnd="@drawable/down_arrow_resize"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="@string/place_name_test"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:paddingRight="15dp"
        android:drawablePadding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/warning"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
